<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="24%"
                android:startColor="#ff201e2c"
                android:endColor="#ff212e3d"
                android:angle="45"/>
            <size
                android:width="720dip"
                android:height="1280dip" />
        </shape>
    </item>
    <item>
        <bitmap xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@*android:drawable/bootleg_themebg"
            android:tileMode="repeat" />
    </item>
</layer-list>